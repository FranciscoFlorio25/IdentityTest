@model IdentityTest.Web.ViewModels.UserViewModel;
@{
    ViewData["Title"] = "Register";
}

<h1 class="bg-info text-white">Register User</h1>
<a asp-action="Index" class="btn btn-secondary">Back</a>
@if (!string.IsNullOrEmpty(@ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">
        <p>@ViewBag.ErrorMessage</p>
    </div>
}

<div class="row">
    <div class="col-md-12">
        <form method="post">

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Password" title="Password">Password</label>
                <input type="password" asp-for="Password" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="PasswordConfirm" title=" PasswordConfirm">Confirm Password</label>
                <input type = "password" asp-for="PasswordConfirm" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="FirstName" title="FirstName">First name</label>
                <input asp-for="FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="LastName" title="LastName">Last Name</label>
                <input asp-for="LastName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address" title="Address">Address</label>
                <input asp-for="Address" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" title="PhoneNumber">PhoneNumber</label>
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
            <button type="submit" class="btn-primary">Register</button>
        </form>

    </div>
</div>