@model IdentityTest.Web.ViewModels.UserUpdateViewModel
@{
	ViewData["Title"] = "UPDATE USER";
}

<h1 class="bg-info text-white">Update User</h1>
<a asp-action="UserIndex" asp-route-id="@Model.UserId" class="btn btn-secondary">Back</a>

@if (!string.IsNullOrEmpty(@ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">
        <p>@ViewBag.ErrorMessage</p>
    </div>
}

<form asp-action="Update" method="post">
	<div class="form-group">
        <label asp-for="UserEmail" title="UserEmail">User Email</label>
		<input asp-for="UserEmail" class="form-control" />
	</div>
    <div class="form-group">
        <label asp-for="UserFirstName" title="FirstName">First Name</label>
        <input asp-for="UserFirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UserLastName" title="UserLastName">User Lastname</label>
        <input asp-for="UserLastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UserAddress" title="UserAdress">Adress</label>
        <input asp-for="UserAddress" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UserPhoneNumber" title="UserPhoneNumber">PhoneNumber</label>
        <input asp-for="UserPhoneNumber" class="form-control" />
    </div>
	<button type="submit" class="btn btn-primary">Save</button>
</form>