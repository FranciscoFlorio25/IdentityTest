
@model IdentityTest.Web.ViewModels.ChangePasswordViewModel;
@{
	ViewData["Title"] = "Change Password";
}
@if (!string.IsNullOrEmpty(@ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">
        <p>@ViewBag.ErrorMessage</p>
    </div>
}

<h1 class="bg-info text-white">Change Password</h1>
<a asp-action="Index" asp-route-UserId="@Model.UserId" class="btn btn-secondary">Back</a>

<form asp-action="ChangePassword" method="post">
	<div class="form-group">
		<label asp-for="Email">@Model.Email</label>
	</div>
	<div class="form-group">
		<label for="Password">Password</label>
		<input  type = "password" name="Password" class="form-control" />
	</div>

	<div class="form-group">
		<label for="PasswordConfirm">confirm password</label>
		<input type="password" name="ConfirmPassword" class="form-control" />
	</div>
	<button type="submit" class="btn btn-primary">Save</button>
</form>